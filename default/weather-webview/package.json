{
	"name": "vscode-weather-webview",
	"displayName": "Check the weather",
	"version": "0.0.1",
	"private": false,
	"description": "A sample extension to show off the Webview UI Toolkit for Visual Studio Code being used in a webview view.",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "node ./esbuild.js",
		"package": "NODE_ENV=production node ./esbuild.js",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run package",
		"watch": "node ./esbuild.js --watch"
	},
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "weather.weatherView",
					"name": "Weather",
					"type": "webview"
				}
			]
		}
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.2.2",
		"weather-js": "^2.0.0"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/node": "16.x",
		"@types/vscode": "^1.74.0",
		"@types/vscode-webview": "^1.57.0",
		"esbuild": "^0.16.10",
		"esbuild-plugin-copy": "^2.0.1",
		"glob": "^8.0.3",
		"typescript": "^4.8.4",
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	}
}
