{
  "name": "vscode-weather-webview",
  "displayName": "Check the weather",
  "description": "A sample extension to show off the Webview UI Toolkit for Visual Studio Code being used in a webview view.",
  "version": "0.0.1",
  "engines": {
    "vscode": "1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "weather.weatherView",
          "name": "Weather"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/node": "20.x",
    "@types/vscode": "1.84.1",
    "@types/vscode-webview": "1.57.4",
    "@typescript-eslint/eslint-plugin": "6.11.0",
    "@typescript-eslint/parser": "6.11.0",
    "esbuild": "0.19.5",
    "esbuild-plugin-copy": "2.1.1",
    "eslint": "8.53.0",
    "glob": "10.3.10",
    "typescript": "5.2.2"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "1.3.1",
    "weather-js": "2.0.0"
  }
}
