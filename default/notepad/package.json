{
	"name": "notepad",
	"displayName": "notepad",
	"version": "0.0.1",
	"private": false,
	"description": "A sample extension that showcases the Webview UI Toolkit for VS Code alongside the VS Code TreeView and Webview API",
	"homepage": "https://github.com/CodeEditorLand/Foundation#readme",
	"bugs": {
		"url": "https://github.com/CodeEditorLand/Foundation/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CodeEditorLand/Foundation.git"
	},
	"license": "SEE LICENSE IN LICENSE",
	"author": {
		"name": "Playform",
		"email": "Hello@Playform.Cloud",
		"url": "https://playform.cloud"
	},
	"type": "module",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "node ./esbuild.js",
		"package": "NODE_ENV=production node ./esbuild.js",
		"prepublishOnly": "TypeScriptESBuild 'Source/**/*.ts'",
		"vscode:prepublish": "npm run package",
		"watch": "node ./esbuild.js --watch"
	},
	"contributes": {
		"commands": [
			{
				"command": "notepad.createNote",
				"icon": "$(add)",
				"title": "Notepad: Create a note"
			},
			{
				"command": "notepad.deleteNote",
				"icon": "$(trash)",
				"title": "Notepad: Delete note"
			}
		],
		"menus": {
			"view/item/context": [
				{
					"command": "notepad.deleteNote",
					"group": "inline"
				}
			],
			"view/title": [
				{
					"command": "notepad.createNote",
					"group": "navigation@1"
				}
			]
		},
		"views": {
			"notepad": [
				{
					"id": "notepad.notesList",
					"name": "My Notes",
					"type": "tree",
					"visibility": "visible"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"icon": "$(notebook)",
					"id": "notepad",
					"title": "Notepad"
				}
			]
		},
		"viewsWelcome": [
			{
				"contents": "No notes yet!\n[Create a note](command:notepad.createNote)",
				"view": "notepad.notesList"
			}
		]
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "^1.2.2",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/glob": "^8.0.0",
		"@types/node": "16.x",
		"@types/uuid": "^9.0.0",
		"@types/vscode": "^1.74.0",
		"@types/vscode-webview": "^1.57.0",
		"esbuild": "^0.16.10",
		"esbuild-plugin-copy": "^2.0.1",
		"glob": "^8.0.3",
		"typescript": "^4.8.4",
		"typescript-esbuild": "latest"
	},
	"publishConfig": {
		"access": "public"
	}
}
