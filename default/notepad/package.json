{
  "name": "notepad",
  "displayName": "notepad",
  "description": "A sample extension that showcases the Webview UI Toolkit for VS Code alongside the VS Code TreeView and Webview API",
  "version": "0.0.1",
  "engines": {
    "vscode": "1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notepad.createNote",
        "title": "Notepad: Create a note",
        "icon": "$(add)"
      },
      {
        "command": "notepad.deleteNote",
        "title": "Notepad: Delete note",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notepad",
          "title": "Notepad",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "notepad": [
        {
          "id": "notepad.notesList",
          "name": "My Notes",
          "type": "tree",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "notepad.notesList",
        "contents": "No notes yet!\n[Create a note](command:notepad.createNote)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "notepad.createNote",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "notepad.deleteNote",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "lint": "eslint src --ext ts",
    "prepublishOnly": "TypeScriptESBuild Source/**/*.ts"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/node": "20.x",
    "@types/uuid": "9.0.6",
    "@types/vscode": "1.83.1",
    "@types/vscode-webview": "1.57.3",
    "@typescript-eslint/eslint-plugin": "6.9.0",
    "@typescript-eslint/parser": "6.9.0",
    "esbuild": "0.19.5",
    "esbuild-plugin-copy": "2.1.1",
    "eslint": "8.52.0",
    "glob": "10.3.10",
    "prettier": "3.0.3",
    "typescript": "5.2.2",
    "typescript-esbuild": "0.3.1"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "1.2.2",
    "uuid": "9.0.1"
  },
  "homepage": "https://github.com/CodeEditorLand/CodeEditorLand#readme",
  "bugs": {
    "url": "https://github.com/CodeEditorLand/CodeEditorLand/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeEditorLand/CodeEditorLand.git"
  },
  "license": "MIT",
  "type": "module",
  "private": "false",
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Nikola Hristov",
    "email": "nikola@nikolahristov.tech",
    "url": "https://nikolahristov.tech"
  }
}
