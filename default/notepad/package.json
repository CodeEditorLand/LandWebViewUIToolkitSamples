{
	"name": "notepad",
	"displayName": "notepad",
	"version": "0.0.1",
	"description": "A sample extension that showcases the Webview UI Toolkit for VS Code alongside the VS Code TreeView and Webview API",
	"main": "./out/extension.js",
	"scripts": {
		"compile": "node ./esbuild.js",
		"package": "NODE_ENV=production node ./esbuild.js",
		"vscode:prepublish": "npm run package",
		"watch": "node ./esbuild.js --watch"
	},
	"contributes": {
		"commands": [
			{
				"command": "notepad.createNote",
				"title": "Notepad: Create a note",
				"icon": "$(add)"
			},
			{
				"command": "notepad.deleteNote",
				"title": "Notepad: Delete note",
				"icon": "$(trash)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "notepad.createNote",
					"group": "navigation@1"
				}
			],
			"view/item/context": [
				{
					"command": "notepad.deleteNote",
					"group": "inline"
				}
			]
		},
		"views": {
			"notepad": [
				{
					"id": "notepad.notesList",
					"name": "My Notes",
					"type": "tree",
					"visibility": "visible"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "notepad",
					"title": "Notepad",
					"icon": "$(notebook)"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "notepad.notesList",
				"contents": "No notes yet!\n[Create a note](command:notepad.createNote)"
			}
		]
	},
	"dependencies": {
		"@vscode/webview-ui-toolkit": "1.4.0",
		"uuid": "9.0.1"
	},
	"devDependencies": {
		"@types/glob": "8.1.0",
		"@types/node": "20.x",
		"@types/uuid": "9.0.7",
		"@types/vscode": "1.85.0",
		"@types/vscode-webview": "1.57.4",
		"esbuild": "0.19.11",
		"esbuild-plugin-copy": "2.1.1",
		"glob": "10.3.10",
		"typescript": "5.3.3"
	}
}
