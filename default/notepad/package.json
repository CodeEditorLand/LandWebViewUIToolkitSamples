{
  "name": "notepad",
  "displayName": "notepad",
  "description": "A sample extension that showcases the Webview UI Toolkit for VS Code alongside the VS Code TreeView and Webview API",
  "version": "0.0.1",
  "engines": {
    "vscode": "1.75.0"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notepad.createNote",
        "title": "Notepad: Create a note",
        "icon": "$(add)"
      },
      {
        "command": "notepad.deleteNote",
        "title": "Notepad: Delete note",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "notepad",
          "title": "Notepad",
          "icon": "$(notebook)"
        }
      ]
    },
    "views": {
      "notepad": [
        {
          "id": "notepad.notesList",
          "name": "My Notes",
          "type": "tree",
          "visibility": "visible"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "notepad.notesList",
        "contents": "No notes yet!\n[Create a note](command:notepad.createNote)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "notepad.createNote",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "notepad.deleteNote",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "node ./esbuild.js",
    "package": "NODE_ENV=production node ./esbuild.js",
    "watch": "node ./esbuild.js --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/node": "20.x",
    "@types/uuid": "9.0.8",
    "@types/vscode": "1.86.0",
    "@types/vscode-webview": "1.57.5",
    "@typescript-eslint/eslint-plugin": "7.1.0",
    "@typescript-eslint/parser": "7.1.0",
    "esbuild": "0.20.1",
    "esbuild-plugin-copy": "2.1.1",
    "eslint": "8.57.0",
    "glob": "10.3.10",
    "prettier": "3.2.5",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "1.4.0",
    "uuid": "9.0.1"
  }
}
